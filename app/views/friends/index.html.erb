

<h1>Friends</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= "#{friend.first_name} #{friend.last_name}" %></td>
        <td><%= friend.email %></td>
        <td>
          <%= link_to "Show", friend, class: "btn btn-primary btn-sm" %>
          <%= link_to "Edit", edit_friend_path(friend), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", friend, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-success" %>
